{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNEXT",
        "moduleResolution": "Node",
        "lib": [
            "ES2020"
        ],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "build",
        "noEmitOnError": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "exclude": [
        "src/**/*.test.ts"
    ]
}
